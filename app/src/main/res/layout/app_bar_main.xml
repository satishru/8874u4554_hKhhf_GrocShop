<?xml version="1.0" encoding="utf-8"?><androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".ui.activity.main.MainActivity">    <com.google.android.material.appbar.AppBarLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:theme="@style/AppTheme.AppBarOverlay">        <include            android:id="@+id/inc_toolbar"            layout="@layout/layout_common_toolbar" />    </com.google.android.material.appbar.AppBarLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        app:layout_behavior="@string/appbar_scrolling_view_behavior">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="?attr/actionBarSize"            android:background="@color/colorPrimary"            android:gravity="center"            android:orientation="vertical">            <app.groceryapp.ui.custom.GroceryTextView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_margin="@dimen/margin_small"                android:background="@drawable/rounded_corner"                android:drawableStart="@drawable/ic_search"                android:drawablePadding="@dimen/margin_normal"                android:paddingStart="@dimen/margin_small"                android:paddingEnd="@dimen/margin_small"                android:gravity="start|center"                android:text="@string/label_search"                android:textColor="@color/colorTextSecondary"                app:custom_font="semi_bold"/>        </LinearLayout>        <include            android:id="@+id/inc_content_main"            layout="@layout/content_main" />    </LinearLayout></androidx.coordinatorlayout.widget.CoordinatorLayout>