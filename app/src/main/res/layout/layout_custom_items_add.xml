<?xml version="1.0" encoding="utf-8"?><merge xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto">    <app.groceryapp.ui.custom.GroceryButton        android:id="@+id/btn_add"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:backgroundTint="@color/colorButtonTheme"        android:gravity="center"        android:minWidth="0dp"        android:minHeight="0dp"        android:paddingStart="@dimen/margin_normal"        android:paddingEnd="@dimen/margin_normal"        android:text="@string/label_add"        android:textColor="@color/colorButtonTextLight"        android:textSize="@dimen/font_medium"        android:visibility="visible"        app:custom_btn_font="medium" />    <LinearLayout        android:id="@+id/ll_item_counter"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:gravity="center"        android:orientation="horizontal"        android:paddingTop="@dimen/margin_very_small"        android:visibility="gone">        <ImageView            android:id="@+id/iv_decrement"            android:layout_width="35dp"            android:layout_height="35dp"            android:background="?attr/selectableItemBackground"            android:clickable="true"            android:contentDescription="@string/app_name"            android:focusable="true"            android:minWidth="35dp"            android:minHeight="35dp"            android:src="@drawable/ic_minus" />        <app.groceryapp.ui.custom.GroceryTextView            android:id="@+id/tv_item_count"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:paddingStart="@dimen/margin_very_small"            android:paddingEnd="@dimen/margin_very_small"            android:text="0"            android:textColor="@color/colorTextPrimary"            android:textSize="@dimen/font_medium"            app:custom_font="regular" />        <ImageView            android:id="@+id/iv_increment"            android:layout_width="35dp"            android:layout_height="35dp"            android:background="?attr/selectableItemBackground"            android:clickable="true"            android:contentDescription="@string/app_name"            android:focusable="true"            android:minWidth="35dp"            android:minHeight="35dp"            android:src="@drawable/ic_plus" />    </LinearLayout></merge>