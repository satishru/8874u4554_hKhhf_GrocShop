<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/ll_error"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:gravity="center"    android:orientation="vertical"    android:visibility="gone"    android:padding="@dimen/margin_large">    <ImageView        android:layout_width="@dimen/error_image_width"        android:layout_height="@dimen/error_image_width"        android:src="@drawable/ic_menu_camera" />    <app.groceryapp.ui.custom.GroceryButton        android:id="@+id/btn_retry"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/margin_normal"        android:backgroundTint="@color/colorButtonTheme"        android:minWidth="@dimen/error_btn_min_width"        android:text="@string/label_retry"        android:textColor="@color/colorButtonTextLight" />    <app.groceryapp.ui.custom.GroceryTextView        android:id="@+id/tv_error_title"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/margin_normal"        android:gravity="center"        android:text=""        android:textSize="@dimen/font_normal" />    <app.groceryapp.ui.custom.GroceryTextView        android:id="@+id/tv_error_info"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/margin_normal"        android:gravity="center"        android:text=""        android:textSize="@dimen/font_normal" /></LinearLayout>