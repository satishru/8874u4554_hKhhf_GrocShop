<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/rl_content"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="?attr/selectableItemBackground"    android:clickable="true"    android:focusable="true"    android:paddingBottom="@dimen/margin_normal">    <ImageView        android:id="@+id/iv_sub_category_image"        android:layout_width="@dimen/sub_category_image_width"        android:layout_height="@dimen/sub_category_image_height"        android:layout_centerHorizontal="true"        android:layout_marginTop="@dimen/margin_normal"        android:contentDescription="@string/app_name"        android:scaleType="fitCenter"        android:src="@drawable/ic_error" />    <app.groceryapp.ui.custom.GroceryTextView        android:id="@+id/tv_sub_category_name"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/iv_sub_category_image"        android:layout_marginTop="@dimen/margin_normal"        android:paddingBottom="@dimen/margin_very_small"        android:paddingStart="@dimen/margin_small"        android:paddingEnd="@dimen/margin_small"        android:gravity="center"        android:maxLines="2"        android:text="@string/app_name"        android:textSize="@dimen/font_small"        app:custom_font="regular" />    <app.groceryapp.ui.custom.GroceryTextView        android:id="@+id/tv_offer"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/tv_sub_category_name"        android:gravity="center"        android:maxLines="1"        android:text="Up to 10% OFF"        android:textColor="@color/colorTextTheme"        android:textSize="@dimen/font_small"        app:custom_font="regular" /></RelativeLayout>