<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/ll_menu"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="?attr/selectableItemBackground"    android:clickable="true"    android:focusable="true"    android:gravity="center"    android:orientation="horizontal"    android:paddingStart="@dimen/margin_large"    android:paddingTop="@dimen/margin_normal"    android:paddingEnd="@dimen/margin_normal"    android:paddingBottom="@dimen/margin_normal">    <ImageView        android:id="@+id/iv_icon"        android:layout_width="@dimen/menu_icon_width"        android:layout_height="@dimen/menu_icon_height"        android:layout_marginTop="2dp"        android:alpha="@integer/menu_icon_alpha"        android:contentDescription="@string/app_name"        android:src="@drawable/ic_menu_gallery" />    <app.groceryapp.ui.custom.GroceryTextView        android:id="@+id/tv_menu"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:alpha="@integer/menu_text_alpha"        android:paddingStart="@dimen/margin_normal"        android:paddingEnd="@dimen/margin_normal"        android:text="@string/app_name"        android:textColor="@color/colorTextPrimary"        android:textSize="@dimen/font_medium"        app:custom_font="bold" /></LinearLayout>