<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorLight"    android:paddingTop="@dimen/margin_very_small"    android:paddingStart="@dimen/margin_very_small"    android:paddingEnd="@dimen/margin_very_small"    android:paddingBottom="@dimen/margin_very_small">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="@dimen/margin_normal">        <ImageView            android:id="@+id/iv_product_image"            android:layout_width="@dimen/product_image_width"            android:layout_height="@dimen/product_image_height"            android:layout_centerVertical="true"            android:contentDescription="@string/app_name"            android:scaleType="fitCenter" />        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="@dimen/margin_normal"            android:layout_marginEnd="@dimen/margin_very_small"            android:layout_toEndOf="@+id/iv_product_image">            <LinearLayout                android:id="@+id/ll_price"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <app.groceryapp.ui.custom.GroceryTextView                    android:id="@+id/tv_price"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="₹80"                    android:textSize="@dimen/font_large"                    android:textColor="@color/colorTextPrimary"                    app:custom_font="bold" />                <app.groceryapp.ui.custom.GroceryTextView                    android:id="@+id/tv_striked_price"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginStart="@dimen/margin_small"                    android:background="@drawable/strike_through"                    android:text="₹60"                    android:textColor="@color/colorTextDisabled"                    android:textSize="@dimen/font_medium"                    app:custom_font="regular" />            </LinearLayout>            <app.groceryapp.ui.custom.GroceryTextView                android:id="@+id/tv_product_name"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@+id/ll_price"                android:layout_marginTop="@dimen/margin_small"                android:maxLines="2"                android:text="@string/app_name"                android:textColor="@color/colorTextPrimary"                android:textSize="@dimen/font_medium"                app:custom_font="regular" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@+id/tv_product_name"                android:layout_centerVertical="true"                android:layout_marginTop="@dimen/margin_small">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_alignParentStart="true"                    android:layout_centerVertical="true"                    android:layout_toStartOf="@+id/layout_add_item"                    android:orientation="horizontal">                    <app.groceryapp.ui.custom.GroceryTextView                        android:id="@+id/tv_product_quantity"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:minWidth="@dimen/product_quantity_min_width"                        android:layout_marginEnd="@dimen/margin_small"                        android:background="@drawable/rounded_border"                        android:drawableEnd="@drawable/ic_arrow_down"                        android:drawablePadding="@dimen/margin_very_small"                        android:ellipsize="end"                        android:gravity="center"                        android:maxLines="2"                        android:paddingStart="@dimen/margin_very_small"                        android:paddingTop="3dp"                        android:paddingEnd="@dimen/margin_very_small"                        android:paddingBottom="3dp"                        android:text="5 ltr"                        android:textColor="@color/colorTextPrimary"                        android:textSize="@dimen/font_medium"                        app:custom_font="regular" />                </LinearLayout>                <app.groceryapp.ui.custom.GroceryAddItemLayout                    android:id="@+id/layout_add_item"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentEnd="true"                    android:layout_centerVertical="true"                    android:layout_marginTop="5dp" />            </RelativeLayout>        </RelativeLayout>    </RelativeLayout>    <app.groceryapp.ui.custom.GroceryTextView        android:id="@+id/tv_offer_percent"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_margin="@dimen/margin_very_small"        android:background="@drawable/rounded_offer"        android:padding="2dp"        android:text="@string/text_product_offer"        android:textColor="@color/colorTextLight"        android:textSize="@dimen/font_small"        app:custom_font="regular" /></RelativeLayout>